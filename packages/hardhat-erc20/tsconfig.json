{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src", "./test", "./typechain"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "./test",
    "./src",
    "./scripts",
    "./typechain"
  ],
  "files": ["hardhat.config.ts"]
}
